<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_height="110dp"
        android:layout_width="match_parent"
        android:text=" "
        android:gravity="right"
        android:textSize="100dp"
        android:background="@color/colorAccent"
        android:id="@+id/pantalla"
        />
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:background="@color/colorAccent">
        <LinearLayout android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_weight="1">
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="←"
                android:textSize="30dp"
                />
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CE"
                android:textSize="30dp"
                android:onClick="borrar"
                android:id="@+id/btnborrar"
                />
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30dp"
                />
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="30dp"
                />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_weight="1">
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp"
                android:onClick="botton7"
                android:id="@+id/btn7"/>
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp"
                android:onClick="botton8"
                android:id="@+id/btn8"/>
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp"
                android:onClick="botton9"
                android:id="@+id/btn9"/>
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp"
                android:onClick="division"
                android:id="@+id/btndivi"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            >
            <Button
             android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp"
                android:onClick="botton4"
                android:id="@+id/btn4"
             />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp"
                android:onClick="botton5"
                android:id="@+id/btn5"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp"
                android:onClick="botton6"
                android:id="@+id/btn6"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp"
                android:onClick="multi"
                android:id="@+id/btnmulti"
                />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp"
                android:onClick="botton1"
                android:id="@+id/btn1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp"
                android:onClick="botton2"
                android:id="@+id/btn2"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp"
                android:onClick="botton3"
                android:id="@+id/btn3"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp"
                android:onClick="resta"
                android:id="@+id/btnresta"
                />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            >
            <Button android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="0"
                    android:textSize="30dp"
                    android:onClick="botton0"
                    android:id="@+id/btn0"
                />
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="30dp"
                />
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp"
                android:onClick="suma"
                android:id="@+id/btnsuma"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
